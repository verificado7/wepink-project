{
  "builds": [
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/create-payment", "destination": "/api/server.js" },
    { "source": "/payment-status/:id", "destination": "/api/server.js" },
    { "source": "/api/(.*)", "destination": "/api/server.js" },
    { "source": "/img/(.*)", "destination": "/img/$1" },
    { "source": "/product(.*)", "destination": "/product.html" },
    { "source": "/login(.*)", "destination": "/login.html" },
    { "source": "/payment(.*)", "destination": "/payment.html" },
    { "source": "/admin(.*)", "destination": "/admin.html" }
  ],
  "headers": [
    {
      "source": "/create-payment",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "POST, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    },
    {
      "source": "/payment-status/:id",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type" }
      ]
    }
  ]
}
